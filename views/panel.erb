<!DOCTYPE html>
<html>
	<head>
		<title>Panel</title>
		<script type="text/javascript" src="js/jquery-1.11.2.min.js"></script>
		<script type="text/javascript" src="js/app.js"></script>
		<script type="text/javascript" src="js/bootstrap.min.js"></script>
		<script type="text/javascript" src="js/highcharts.js"></script>
		<link rel="stylesheet" href="../css/bootstrap.min.css">
		<link rel="stylesheet" href="../css/bootstrap-theme.min.css">
		<link rel="stylesheet" href="../css/global.css">
	</head>
	<body>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<div class="logo">
						<img src="img/mainlogo_color.png" alt="">
					</div>
					<div class="main-title">
						<a class="navbar-brand color-title" href="#"><b>Panel de administaci√≥n</b></a>
					</div>
				</div>
			</div>
		</nav>
		<div class="row">
			<!--Ultimos tickets-->
			<div class="col-xs-5 panel panel-default padding-tickets " style="margin-left:20px;">
				<p class="color-panel">
					<img src="../img/logo-tickets.png" class="img-tickets" alt="tickets" >
					<b>Ultimos tickets</b>
				</p>
				<ul class="list-group  col-xs-12">
					<% @tickets.reverse.each do |ticket| %>
					<li class=" list-group-item  <%=  'b-success' if ticket.attributes.status == 'open' %> <%=  'b-warning' if ticket.attributes.status == 'pending'   %>  <%=  'b-danger' if ticket.attributes.status == 'new'   %> <%=  'b-info' if ticket.attributes.status == 'solved'   %> ">
						<div class="row">
							<div class="col-xs-9">
								<%= ticket.attributes.raw_subject %>
								<%= ticket.attributes.updated_at %>
							</div>
						</div>
					</li>
					<%end%>
				</ul>
			</div>
			<!--Facebook-->
			<div class="col-xs-3 panel panel-default padding-facebook " style=" margin-left:20px; width:468px; height:430px;">
				<p class="color-panel-fb ">
					<img src="../img/FB-f-Logo__blue_72.png" class="logo-facebook" alt="facebook">
					<b>Publicaciones</b>
				</p>
				<div class="fb-like-box"  data-href="https://www.facebook.com/Cursameoficial" data-colorscheme="light" data-show-faces="false" data-header="false" data-stream="true" data-show-border="false"></div>
			</div>
			<!--Twitter-->
			<div class="col-xs-4 panel panel-default padding-twitter" style=" width:468px; height:430px; margin-left:20px;">
				<div class="margin-twitter">
					<a class="twitter-timeline" href="https://twitter.com/search?q=cursame" data-widget-id="574989712751919104" data-chrome="nofooter transparent" >@cursame</a>
				</div>
			</div>
			<!--Panel graph-->
			<div class="col-xs-12 panel panel-default  padding-graph" style="margin-left:20px;">
				<p class="color-panel-graph">
					<img src="../img/logins.png" class="img-login" alt="graph">
					<b>Logins</b>
				</p>
				<div id="chartx" ></div>
				
			</div>
		</div>
	</body>
</html>
