<!DOCTYPE html>
<html>
	<head>
		<title>Panel</title>
		<script type="text/javascript" src="js/jquery-1.11.2.min.js"></script>
		<script type="text/javascript" src="js/app.js"></script>
		<script type="text/javascript" src="js/bootstrap.min.js"></script>
		<script type="text/javascript" src="js/highcharts.js"></script>
		<link rel="stylesheet" href="../css/bootstrap.min.css">
		<link rel="stylesheet" href="../css/bootstrap-theme.min.css">
		<link rel="stylesheet" href="../css/global.css">
	</head>
	<% if !@notice.blank? %>
	<div id="notice" class="alert alert-success h4 " style=" height:50px; margin-top:0px !important; margin-bottom:0px !important; ">
		<center>
		<%= @notice  if defined? @notice %>
		</center>
	</div>
	<%end%>
	<body>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<div class="logo  pull-left">
						<img src="img/mainlogo_color.png" alt="">
					</div>
					<div class="main-title pull-left">
						<a class="navbar-brand color-title" href="#"><b>Panel de administaci√≥n</b></a>
					</div>
				</div>
				<span class="btn-group pull-right">
				<a class="btn btn-success" style="margin-top:5px;" data-toggle="modal" data-target="#myModal" >Registro de entrada</a>
				<a class="btn btn-info" style="margin-top:5px;" data-toggle="modal" data-target="#myModalR" >Registro de usuario</a>
				</span>

			</div>
		</nav>
		<div class="row cols-xs-12">
			<!--Ultimos tickets-->
			<div class="col-xs-3 panel panel-default padding-tickets " style=" width:33%; margin-left:20px;">
				<%= erb :'panel/tikets'%>
			</div>
			<!--Facebook-->
			<div class="col-xs-2 panel panel-default padding-facebook " style=" margin-left:20px; width:35%; height:430px;">
				<%= erb :'panel/facebook'%>
			</div>
			<!--Twitter-->
			<div class="col-xs-3 panel panel-default padding-twitter" style="width:25%;  height:430px; margin-left:20px;">
				<%= erb :'panel/twitter'%>
			</div>
			<!--Panel graph-->
			<div class="col-xs-12 panel panel-default  padding-graph" style="margin-left:20px;">
				<p class="color-panel-graph">
					<img src="../img/logins.png" class="img-login" alt="graph">
					<b>Logins</b>
				</p>
				<div id="chartx" style="width:90%"></div>
			</div>
		</div>
	</body>
</html>
